FROM nvidia/cuda:12.6.1-runtime-ubuntu22.04

# -------------------------------
# Install Python 3.12 from deadsnakes
# -------------------------------
RUN apt update && apt install -y software-properties-common && \
    add-apt-repository ppa:deadsnakes/ppa -y && \
    apt update && \
    DEBIAN_FRONTEND=noninteractive apt install -y \
        python3.12 python3.12-venv python3.12-dev && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 2 && \
    update-alternatives --set python3 /usr/bin/python3.12

# -------------------------------
# Install uv (latest)
# -------------------------------
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /usr/local/bin/

# -------------------------------
# Create non-root user `vllm`
# -------------------------------
RUN useradd -m -u 1000 vllm
USER vllm
ENV HOME=/home/vllm
WORKDIR /home/vllm

# -------------------------------
# First uv sync (dependency layer)
# Using BuildKit cache mounts with user ownership
# -------------------------------
RUN --mount=type=cache,target=/home/vllm/.cache/uv,uid=1000,gid=1000 \
    --mount=type=bind,source=uv.lock,target=uv.lock \
    --mount=type=bind,source=pyproject.toml,target=pyproject.toml \
    uv sync --frozen --no-install-project

# -------------------------------
# Copy project files
# -------------------------------
COPY ./src ./pyproject.toml ./uv.lock ./

# -------------------------------
# Second sync (installs project + extras)
# -------------------------------
RUN --mount=type=cache,target=/home/vllm/.cache/uv,uid=1000,gid=1000 \
    uv sync --frozen --extra ui

# -------------------------------
# Runtime environment variables
# -------------------------------
ENV WHISPER__MODEL=Systran/faster-whisper-large-v3
ENV WHISPER__INFERENCE_DEVICE=auto
ENV UVICORN_HOST=0.0.0.0
ENV UVICORN_PORT=8000

# -------------------------------
# Entrypoint
# -------------------------------
CMD ["uv", "run", "uvicorn", "--factory", "faster_whisper_server.main:create_app"]
